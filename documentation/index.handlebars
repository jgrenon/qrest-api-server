<html>
<head>
    <title>{{title}}</title>
    <link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/css/bootstrap.css" rel="stylesheet">
    <style>
        table.config td:first-child {
            font-weight: bold;
            width: 35%;
        }

        .module {
            display: table-caption;
            font-weight: bold;
            font-size: 175%;
        }

    </style>
</head>
<body ng-app="bbdoc" ng-controller="MainCtrl">
    <div class="container">
        <div class="page-header">
            <h1>{{doc.title}}</h1>
            <h3>Version: {{doc.version}}</h3>
            <uib-tabset>
                <uib-tab heading="Model" index="1">
                    <uib-accordion close-others="true">
                    {{#each doc.models}}
                        <uib-accordion-group is-open="false">
                            <uib-accordion-heading>{{name}}</uib-accordion-heading>
                            <table class="table table-striped table-condensed">
                                <thead>
                                <tr>
                                    <td>Type</td>
                                    <td>Name</td>
                                    <td>Meta</td>
                                    <td>Flags</td>
                                    <td>Rules</td>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each fields}}
                                    <tr>
                                        <td>{{name}}</td>
                                        <td>{{type}}</td>
                                        <td>{{meta}}</td>
                                        <td>{{flags}}</td>
                                        <td>{{rules}}</td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                            <h3>Hooks</h3>
                            <ul>
                                <li class="heading"> CREATE </li>
                                <li class="heading"> UPDATE </li>
                                <li class="heading"> LIST </li>
                                <li class="heading"> SHOW </li>
                                <li class="heading"> REMOVE </li>
                            </ul>
                        </uib-accordion-group>
                    {{/each}}
                    </uib-accordion>
                </uib-tab>
                <uib-tab heading="Routes">
                </uib-tab>
            </uib-tabset>
        </div>
    </div>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.6/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/1.3.3/ui-bootstrap-tpls.min.js"></script>
    <script>
        angular.module('bbdoc', ['ui.bootstrap'])
        .controller('MainCtrl', function($scope) {

        });
    </script>
</body>
</html>
